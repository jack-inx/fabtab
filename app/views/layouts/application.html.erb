<% if params[:controller]=='xdevise/confirmations' %>
  <link href="/assets/FabTab_heart.png" rel="shortcut icon" type="image/vnd.microsoft.icon" />
  <%= render :partial =>'layouts/signin' %>

<% else %>
  <!DOCTYPE html>
  <html>
    <head>
      <title>FabTab</title>
      <link href="/assets/FabTab_heart.png" rel="shortcut icon" type="image/vnd.microsoft.icon" />
      <%= stylesheet_link_tag    "application" %>
      <%= javascript_include_tag "application" %>
      <%= csrf_meta_tags %>
      <%= ajaxful_rating_style %>

      <%= yield(:head) %>
      <meta http-equiv="X-UA-Compatible" content="IE=8" >

      <meta property="fb:app_id" content="148204908657714"/>
      <meta property="og:title" content="FabTab"/>
      <meta property="og:type" content="website"/>
      <meta property="og:image" content="http://fabtab.com/assets/FabTab-LOGObeta.png"/>
      <meta property="og:url" content="http://fabtab.com"/>
      <meta property="og:site_name" content="fabtab"/>
      <meta property="og:description" content="FabTab is your place to tab, save and manage all your offers, coupons, ads and other fab stuff all in one place!"/>
      <%= render :partial => 'layouts/googleanalytics' %>
    </head>
    <body>

      <% if current_user %>
        <%= render :partial => 'layouts/new' %>
      <% else %>
        <%= render :partial => 'layouts/old' %>
      <% end %>
      <script type="text/javascript">
        var uvOptions = {};
        (function() {
          var uv = document.createElement('script'); uv.type = 'text/javascript'; uv.async = true;
          uv.src = ('https:' == document.location.protocol ? 'https://' : 'http://') + 'widget.uservoice.com/cYPrkIzxmmj4HwwxOawg.js';
          var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(uv, s);
        })();
      </script>
    </body>
  </html>
<% end %>
