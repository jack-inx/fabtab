<div style="float: right;margin-right: 22px;">
  <%= link_to "All User",setting_users_list_path, :id => 'add_coupan' %>
</div>
<%= form_for @user,:url => url_for(:controller=>:settings, :action=>:update_users), :html => {:id => 'new_brand'} do |f| %>
  <div class="brand_name">User Name</div>
  <%= f.text_field :username %>
  <div class="twitter_handle">Email ID </div>
  <%= f.text_field :email %>
<div class="brand_name">Password</div>
  <%= f.password_field :password  %>
  <div class="brand_logo">Password Confirmation</div>
  <%= f.password_field :password_confirmation %>
  <div class="twitter_handle">Zip Code </div>
  <%= f.text_field :zipcode %>
  <div class="brand_logo">Admin
    <%= f.check_box :admin %>
  </div><br />
  <%= f.submit "Update", :id => "add_coupan" %>
  <%= link_to "Cancel", setting_users_list_path,:id => "add_coupan" %>
<% end %>

