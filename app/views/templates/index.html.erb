

<div class="content" style="float: none;">

  <h1>Email Templates List <span style="float: right;"><%= link_to "Add New Template", new_template_path, :id=>"add_coupan", :class=>'space', :style=>'margin: 5px;' %><%= link_to "Back", admin_edit_path , :id=>"add_coupan" %></span></h1>
  <%= form_tag(templates_delete_selection_path) do |f| %>
    <%#= link_to "List of Purpose", purposes_path %>
    <table class="table">
      <th><%= check_box_tag "delete[selected][]","all",false ,:id => "select_all"  %></th>
      <th align="center" style="border-left:none !important;">Template Name</th>
      <th style="border-left:none !important;">Purpose</th>
      <th align="center" style="border-left:none !important;">  </th>
      <th align="center" style="border-left:none !important;">&nbsp;&nbsp;Actions</th>
      <tbody>
        <% @templates.each do |f| %>
          <tr>
            <td><%= check_box_tag "delete[selected][]",f.id  %></td>
            <td style="border-left:none !important;"><%= f.name %></td>
            <td style="border-left:none !important;"><%=  f.purpose.name %></td>
            <td style="border-left:none !important;">
              <div class="delete_dialog hidden" id="hidden_delete_box_<%=  f.id %>">
                <div class="close" style="margin: 12px 24px;">X</div>
                <div class="title" style="margin-left: 7px;"> Delete</div>
                <div class="message-text"> Delete this Template?</div>
                <%= link_to "Delete", template_path(f), :method=>'delete', :class => 'delete_tab' %>
              </div>
            </td>
            <td style="border-left:none !important;">
              <%= link_to "View", template_path(f)%> <span class="login_link"> | </span><%= link_to "Edit", edit_template_path(f) %><span class="login_link"> | </span>
              <%= link_to "Delete", "#",:onclick=>"$('#hidden_delete_box_#{f.id}').css('display','block');"  %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= submit_tag "Delete"  %>
  <% end %>

  <script type="text/javascript">
    $('.close').click(function(){
      $(this).parent().hide();
    });
    $('#select_all').click(function() {
      if (this.checked) {
        $(':checkbox').each(function() {
          this.checked = true;
        });
      } else {
        $(':checkbox').each(function() {
          this.checked = false;
        });
      }
    });
  </script>
</div>


